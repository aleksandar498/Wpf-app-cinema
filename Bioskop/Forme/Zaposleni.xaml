        <Label Content="Ime Zaposlenog:" HorizontalAlignment="Left" Margin="80,39,0,0" VerticalAlignment="Top"/>
        <Label Content="Prezime Zaposlenog:" HorizontalAlignment="Left" Margin="58,82,0,0" VerticalAlignment="Top"/>
